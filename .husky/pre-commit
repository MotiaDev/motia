#!/usr/bin/env sh

# JS/TS: run lint-staged from motia-js where config and deps live
cd motia-js && npx lint-staged --cwd .. && cd ..

# Python: run ruff on staged .py files under motia-py/
STAGED_PY=$(git diff --cached --name-only --diff-filter=ACM -- 'motia-py/**/*.py')
if [ -n "$STAGED_PY" ]; then
  ruff check $STAGED_PY
fi
