{
  "name": "playground",
  "private": true,
  "scripts": {
    "postinstall": "motia install",
    "python-setup": "python -m venv python_modules && \"python_modules\\Scripts\\pip install -r requirements.txt && python_modules\\Scripts\\pip install -r ../packages/core/requirements.txt\"",
    "dev": "motia dev",
    "dev:workbench": "__MOTIA_DEV_MODE__=1 motia dev",
    "clean": "node -e \"const fs=require('fs');['.mermaid','node_modules','python_modules'].forEach(d=>{if(fs.existsSync(d))fs.rmSync(d,{recursive:true,force:true})})\"",
    "get-config": "motia get-config --output ./",
    "test:tsc-check": "tsc -p ./tests/tsconfig.test.json --noEmit",
    "test": "PATH=python_modules/bin:$PATH jest",
    "test:silent": "PATH=python_modules/bin:$PATH jest --silent",
    "lint": "pnpm run lint:ts && pnpm run lint:tsx",
    "lint:ts": "eslint --config ../eslint.config.js",
    "lint:tsx": "eslint --config ../eslint.config.tsx.js"
  },
  "dependencies": {
    "@motiadev/core": "workspace:*",
    "@motiadev/ui": "workspace:*",
    "@motiadev/workbench": "workspace:*",
    "antd": "^5.27.4",
    "deep-equal": "^2.2.3",
    "motia": "workspace:*",
    "openai": "^4.78.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@motiadev/test": "workspace:*",
    "@types/deep-equal": "^1.0.4",
    "@types/jest": "^29.5.14",
    "@types/react": "^18.3.18",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "react": "^19.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  }
}
