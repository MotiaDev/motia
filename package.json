{
  "name": "motia-monorepo",
  "version": "0.0.21",
  "private": true,
  "scripts": {
    "prepare": "husky || true",
    "build": "pnpm -r build",
    "dev": "pnpm run build && pnpm -r --filter=playground dev",
    "test": "pnpm -r --filter @iii-dev/motia test",
    "test:ci": "pnpm -r --filter @iii-dev/motia test:ci || echo 'No tests found'",
    "lint": "biome check .",
    "lint:ci": "biome ci . --since=origin/main --changed --diagnostic-level=error --no-errors-on-unmatched",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "format:check": "biome check ."
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.6",
    "globals": "^16.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.0",
    "prettier": "^3.5.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,jsonc}": [
      "biome check --write --no-errors-on-unmatched --files-ignore-unknown=true"
    ]
  },
  "packageManager": "pnpm@10.11.0",
  "volta": {
    "node": "24.11.1"
  }
}
