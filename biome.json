{
  "$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noBannedTypes": "off",
        "noUselessTypeConstraint": "off",
        "useOptionalChain": "warn"
      },
      "correctness": {
        "noUnusedVariables": "warn",
        "noUnusedImports": "error",
        "useUniqueElementIds": "warn",
        "useExhaustiveDependencies": "warn",
        "noNestedComponentDefinitions": "warn"
      },
      "suspicious": {
        "noExplicitAny": "warn",
        "noImplicitAnyLet": "warn",
        "useIterableCallbackReturn": "off",
        "noAssignInExpressions": "warn",
        "noArrayIndexKey": "warn",
        "noDoubleEquals": "warn",
        "noShadowRestrictedNames": "warn"
      },
      "style": {
        "useConst": "error",
        "noNonNullAssertion": "warn",
        "noParameterAssign": "error",
        "useTemplate": "warn",
        "useNodejsImportProtocol": "off"
      },
      "security": {
        "noDangerouslySetInnerHtml": "warn"
      },
      "a11y": "off"
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120,
    "lineEnding": "lf"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "all",
      "semicolons": "asNeeded",
      "arrowParentheses": "always",
      "bracketSpacing": true,
      "bracketSameLine": false
    },
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    }
  },
  "json": {
    "formatter": {
      "indentWidth": 2,
      "trailingCommas": "none"
    }
  },
  "files": {
    "ignoreUnknown": true,
    "experimentalScannerIgnores": [
      "**/.next/**",
      "**/.source/**",
      "**/.turbo/**",
      "**/.vscode/**",
      "**/.idea/**",
      "**/dist/**",
      "**/node_modules/**",
      "**/build/**",
      "**/coverage/**",
      "**/playwright-report/**",
      "**/test-results/**",
      "pnpm-lock.yaml",
      "package-lock.json",
      "yarn.lock",
      "*.log",
      "*.min.js",
      "*.min.css"
    ],
    "includes": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "**/*.json", "**/*.jsonc"]
  }
}
